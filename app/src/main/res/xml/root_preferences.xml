<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <SwitchPreference android:id="@+id/night_mode"
        android:title="@string/night_mode"
        android:defaultValue="@bool/night_mode_default"
        android:key="@string/night_mode_settings"
        android:summary="@string/night_mode_summary"/>



        <SwitchPreference android:id="@+id/notification"
            android:title="@string/notification"
            android:key="@string/notification_settings"
            android:summary="@string/notification_summary"/>

        <Preference android:id="@+id/about"
            android:title="@string/about"
            android:key="@string/about_settings"/>




</PreferenceScreen>